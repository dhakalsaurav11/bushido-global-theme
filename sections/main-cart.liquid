<div class="max-w-7xl mx-auto px-6 py-24">
  <h1 class="text-4xl font-black uppercase tracking-tighter mb-12">Your Cart</h1>

  {% if cart.item_count > 0 %}
    <form action="{{ routes.cart_url }}" method="post" id="cart-form">
      <div class="hidden md:grid grid-cols-4 border-b border-gray-200 pb-4 mb-4 text-sm font-bold uppercase tracking-widest text-gray-500">
        <div class="col-span-2">Product</div>
        <div class="text-center">Quantity</div>
        <div class="text-right">Total</div>
      </div>

      <div class="space-y-8">
        {% for item in cart.items %}
          <div class="grid grid-cols-1 md:grid-cols-4 items-center gap-6 border-b border-gray-100 pb-8">
            <div class="col-span-2 flex items-center gap-6">
              {% if item.image %}
                <img
                  src="{{ item.image | image_url: width: 200 }}"
                  alt="{{ item.title }}"
                  class="w-24 h-24 object-cover rounded bg-gray-100"
                >
              {% endif %}
              <div>
                <a href="{{ item.url }}" class="font-bold uppercase hover:text-red-600 transition-colors">
                  {{- item.product.title -}}
                </a>
                <p class="text-sm text-gray-500">{{ item.variant.title }}</p>
                <a
                  href="/cart/change?line={{ forloop.index }}&quantity=0"
                  class="text-xs text-red-600 underline mt-2 block"
                  >Remove</a
                >
              </div>
            </div>

            <div class="flex justify-center">
              <input
                type="number"
                name="updates[]"
                value="{{ item.quantity }}"
                min="0"
                class="w-16 text-center border border-gray-300 p-2"
              >
            </div>

            <div class="text-right font-mono">
              {{ item.final_line_price | money }}
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="mt-12 flex flex-col items-end gap-4">
        <div class="text-2xl font-black tracking-tighter">
          Subtotal: <span class="text-red-600">{{ cart.total_price | money }}</span>
        </div>
        <p class="text-sm text-gray-500">Taxes and shipping calculated at checkout</p>

        <div class="flex gap-4">
          <button
            type="submit"
            name="update"
            class="px-8 py-4 border border-black uppercase font-bold tracking-widest hover:bg-gray-100 transition-colors"
          >
            Update Cart
          </button>
          <button
            type="submit"
            name="checkout"
            class="px-8 py-4 bg-black text-white uppercase font-bold tracking-widest hover:bg-red-600 transition-colors"
          >
            Checkout
          </button>
        </div>
      </div>
    </form>
  {% else %}
    <div class="text-center py-24">
      <p class="text-xl text-gray-500 mb-8">Your cart is currently empty.</p>
      <a
        href="/collections/all"
        class="inline-block bg-black text-white px-8 py-4 uppercase font-bold tracking-widest hover:bg-red-600 transition-colors"
      >
        Continue Shopping
      </a>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Cart Page",
  "settings": []
}
{% endschema %}
