<footer class="bg-black text-white border-t border-gray-900 pt-20 pb-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-20">
      <div class="md:col-span-1">
        <a href="/" class="text-2xl font-black uppercase tracking-tighter block mb-6">
          Bushido<span class="text-red-600">.</span>
        </a>
        <p class="text-gray-500 text-sm leading-relaxed">
          Global streetwear from the heart of Nepal. <br>
          Engineered for the modern samurai.
        </p>
      </div>

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            <div class="md:col-span-1">
              <h3 class="text-sm font-bold uppercase tracking-widest mb-6 text-gray-400">
                {{ block.settings.heading }}
              </h3>
              <ul class="space-y-4 text-sm font-medium">
                {% for link in block.settings.menu.links %}
                  <li>
                    <a href="{{ link.url }}" class="hover:text-red-600 transition-colors">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>

          {% when 'newsletter' %}
            <div class="md:col-span-1">
              <h3 class="text-sm font-bold uppercase tracking-widest mb-6 text-gray-400">Stay Updated</h3>
              {% form 'customer', class: 'flex flex-col gap-4' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="relative">
                  <input
                    type="email"
                    name="contact[email]"
                    placeholder="ENTER EMAIL"
                    class="w-full bg-transparent border-b border-gray-700 py-3 text-sm focus:outline-none focus:border-white transition-colors uppercase placeholder-gray-600"
                    required
                  >
                  <button type="submit" class="absolute right-0 top-3 text-gray-400 hover:text-white">â†’</button>
                </div>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="border-t border-gray-900 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-gray-600 uppercase tracking-wider">
      <p>&copy; {{ 'now' | date: '%Y' }} Bushido Global LLC. All Rights Reserved.</p>

      <div class="flex gap-6">
        <a href="#" class="hover:text-white transition-colors">Instagram</a>
        <a href="#" class="hover:text-white transition-colors">TikTok</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link_list"
        },
        {
          "type": "newsletter"
        }
      ]
    }
  ]
}
{% endschema %}
