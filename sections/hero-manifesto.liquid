<section class="min-h-screen bg-[#F5F5F4] text-[#1C1917] font-sans border-b border-[#D6D3D1] relative overflow-hidden">
  <div
    class="absolute inset-0 z-0 pointer-events-none"
    style="background-image: linear-gradient(#D6D3D1 1px, transparent 1px), linear-gradient(90deg, #D6D3D1 1px, transparent 1px); background-size: 40px 40px; opacity: 0.3;"
  ></div>

  <div class="grid grid-cols-1 lg:grid-cols-12 min-h-screen relative z-10">
    <div class="lg:col-span-7 flex flex-col justify-between p-6 md:p-12 border-r border-[#D6D3D1] bg-[#F5F5F4]/90 backdrop-blur-sm order-last lg:order-first">
      <div class="flex justify-between items-start text-[10px] font-mono uppercase tracking-widest text-[#78716C]">
        <div class="flex flex-col gap-1">
          <span>LOC: 35.08° N, 106.65° W</span>
          <span>EST. 2026</span>
        </div>
        <div class="text-right">
          <span>VOL. 01</span>
          <span class="block text-[#EA580C]">SYSTEM ONLINE</span>
        </div>
      </div>

      <div class="py-8 md:py-24">
        <h1 class="text-5xl md:text-9xl font-bold uppercase tracking-tighter leading-[0.85] mb-6">
          Bushido<br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#1C1917] to-[#78716C]">Global</span>
        </h1>

        <div class="max-w-md border-l-2 border-[#EA580C] pl-6 mt-8">
          <p class="text-lg md:text-xl font-medium leading-relaxed text-[#44403C]">
            We build armor for the modern ronin.
            <br>
            Technical precision meets raw material.
          </p>
        </div>
      </div>

      <div class="flex flex-col md:flex-row gap-6 items-start md:items-center">
        <a
          href="/collections/all"
          class="group relative px-8 py-4 bg-[#1C1917] text-white font-bold uppercase tracking-[0.2em] overflow-hidden hover:bg-[#EA580C] transition-colors"
        >
          <span class="relative z-10">Access Archive</span>
        </a>

        <span class="hidden md:block w-24 h-[1px] bg-[#D6D3D1]"></span>

        <p class="text-xs font-mono text-[#78716C] uppercase tracking-widest">Latest Drop: "Concrete Jungle"</p>
      </div>
    </div>

    <div class="lg:col-span-5 relative bg-[#E7E5E4] overflow-hidden group h-[40vh] lg:h-auto order-first lg:order-last">
      {% if section.settings.image %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="Bushido Visual"
          class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-[1.5s] ease-out scale-100 group-hover:scale-105"
        >
      {% else %}
        <div class="w-full h-full flex flex-col items-center justify-center bg-[#D6D3D1] p-12 text-center">
          <span class="text-6xl font-bold opacity-10">IMG</span>
        </div>
      {% endif %}

      <div class="absolute inset-0 border-[20px] border-[#F5F5F4] pointer-events-none"></div>

      <div class="absolute bottom-8 right-8 bg-white/90 px-3 py-1 text-[10px] font-mono tracking-widest uppercase border border-[#D6D3D1]">
        Fig. 01 / Texture
      </div>
    </div>
  </div>

  <div class="border-t border-[#D6D3D1] bg-[#1C1917] text-[#F5F5F4] overflow-hidden py-3">
    <div class="animate-marquee whitespace-nowrap flex gap-12 text-xs font-bold uppercase tracking-[0.2em]">
      {% for i in (1..10) %}
        <span>Worldwide Shipping Available</span>
        <span class="text-[#EA580C]">///</span>
        <span>New Arrivals Live</span>
        <span class="text-[#EA580C]">///</span>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Manifesto Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Manifesto Hero"
    }
  ]
}
{% endschema %}
