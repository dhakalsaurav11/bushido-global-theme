<header class="fixed bottom-8 left-1/2 -translate-x-1/2 z-[90] transition-transform duration-300 w-auto max-w-[90vw]">
  <div class="bg-white/90 backdrop-blur-md border border-[#D6D3D1] px-6 py-3 rounded-full shadow-2xl flex items-center gap-6 md:gap-8 justify-between">
    <a
      href="/"
      class="font-bold text-lg tracking-tighter text-[#1C1917] hover:text-[#EA580C] transition-colors whitespace-nowrap"
    >
      BUSHIDO
    </a>

    <nav class="hidden md:flex items-center gap-1 bg-[#F5F5F4] rounded-full px-1 py-1">
      {% for link in linklists['main-menu'].links %}
        <a
          href="{{ link.url }}"
          class="px-4 py-2 text-xs font-bold uppercase tracking-widest text-[#57534E] hover:bg-white hover:text-[#1C1917] hover:shadow-sm rounded-full transition-all"
        >
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    <button
      id="mobile-menu-trigger"
      class="md:hidden text-xs font-bold uppercase tracking-widest text-[#1C1917] hover:text-[#EA580C]"
    >
      [MENU]
    </button>

    <div class="flex items-center gap-4 text-[#1C1917]">
      <a href="{{ routes.search_url }}" class="hover:text-[#EA580C] transition-colors">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-4 h-4"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
      </a>

      <a
        href="{{ routes.cart_url }}"
        class="relative hover:text-[#EA580C] transition-colors flex items-center gap-2 group"
      >
        <span class="text-xs font-bold hidden md:inline group-hover:hidden">CART</span>
        <span class="text-xs font-bold hidden group-hover:inline">OPEN</span>
        <div class="w-2 h-2 bg-[#EA580C] rounded-full"></div>
      </a>
    </div>
  </div>
</header>

<div
  id="mobile-menu-overlay"
  class="fixed inset-0 bg-[#F5F5F4] z-[80] transform translate-y-full transition-transform duration-500 ease-[cubic-bezier(0.22,1,0.36,1)] flex flex-col p-6"
>
  <div class="flex justify-between items-end border-b border-[#D6D3D1] pb-6 mt-12">
    <span class="text-[10px] font-mono uppercase tracking-widest text-[#78716C]"> // SYSTEM NAVIGATION </span>
    <button id="mobile-menu-close" class="text-4xl font-light hover:text-[#EA580C] leading-none">&times;</button>
  </div>

  <nav class="flex-grow flex flex-col justify-center space-y-4">
    <a
      href="/"
      class="text-5xl font-bold uppercase tracking-tighter text-[#1C1917] hover:text-[#EA580C] hover:pl-4 transition-all duration-300 border-b border-transparent hover:border-[#EA580C] pb-2 w-full"
    >
      Home
    </a>
    <a
      href="/collections/all"
      class="text-5xl font-bold uppercase tracking-tighter text-[#1C1917] hover:text-[#EA580C] hover:pl-4 transition-all duration-300 border-b border-transparent hover:border-[#EA580C] pb-2 w-full"
    >
      Catalog
    </a>
    <a
      href="/pages/about"
      class="text-5xl font-bold uppercase tracking-tighter text-[#1C1917] hover:text-[#EA580C] hover:pl-4 transition-all duration-300 border-b border-transparent hover:border-[#EA580C] pb-2 w-full"
    >
      Origin
    </a>
    <a
      href="/search"
      class="text-5xl font-bold uppercase tracking-tighter text-[#A8A29E] hover:text-[#1C1917] hover:pl-4 transition-all duration-300 pb-2 mt-8"
    >
      Search
    </a>
  </nav>

  <div class="border-t border-[#D6D3D1] pt-6 flex justify-between text-[10px] font-mono uppercase tracking-widest text-[#78716C]">
    <span>Bushido Global</span>
    <span>v.2026.1</span>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const trigger = document.getElementById('mobile-menu-trigger');
    const closeBtn = document.getElementById('mobile-menu-close');
    const overlay = document.getElementById('mobile-menu-overlay');

    function toggleMenu() {
      overlay.classList.toggle('translate-y-full');
      // Lock scroll when open
      if (overlay.classList.contains('translate-y-full')) {
        document.body.style.overflow = '';
      } else {
        document.body.style.overflow = 'hidden';
      }
    }

    if (trigger) trigger.addEventListener('click', toggleMenu);
    if (closeBtn) closeBtn.addEventListener('click', toggleMenu);
  });
</script>

