<section class="max-w-7xl mx-auto px-6 py-24 grid grid-cols-1 md:grid-cols-2 gap-16">
  <div class="product-media space-y-4">
    {% for media in product.media %}
      <div class="aspect-square bg-gray-100 overflow-hidden rounded-lg">
        <img
          src="{{ media | image_url: width: 1000 }}"
          alt="{{ media.alt | escape }}"
          class="w-full h-full object-cover"
        >
      </div>
    {% else %}
      <div class="aspect-square bg-gray-100 flex items-center justify-center text-gray-400">
        {{ 'product-1' | placeholder_svg_tag: 'w-32 h-32 opacity-20' }}
      </div>
    {% endfor %}
  </div>

  <div class="product-details sticky top-24 h-fit space-y-8">
    <div class="border-b border-gray-200 pb-8">
      <h1 class="text-4xl font-black uppercase tracking-tighter mb-4">{{ product.title }}</h1>
      <p class="text-2xl font-mono text-gray-600">{{ product.price | money }}</p>
    </div>

    {% form 'product', product %}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

      <button
        type="submit"
        name="add"
        class="w-full bg-black text-white font-bold uppercase py-4 tracking-widest hover:bg-red-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
        {% unless product.available %}
          disabled
        {% endunless %}
      >
        {% if product.available %}
          Add to Cart
        {% else %}
          Sold Out
        {% endif %}
      </button>
    {% endform %}

    <div class="prose prose-sm text-gray-600 mt-8">
      {{ product.description }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Product",
  "settings": [],
  "presets": []
}
{% endschema %}
