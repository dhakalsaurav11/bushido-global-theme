<footer class="bg-[#F5F5F4] text-[#1C1917] border-t border-[#D6D3D1] py-10">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <div class="flex flex-col md:flex-row justify-between items-start gap-10 md:gap-20">
      <div class="w-full md:w-1/2">
        <h3 class="text-[10px] font-mono uppercase tracking-widest text-[#78716C] mb-3">/ Join Network</h3>

        {% form 'customer' %}
          <div class="relative group">
            <input
              type="email"
              name="contact[email]"
              placeholder="ENTER_EMAIL"
              class="w-full bg-transparent border-b border-[#1C1917] py-2 text-lg md:text-xl font-bold uppercase tracking-widest placeholder-[#A8A29E] focus:outline-none focus:border-[#EA580C] transition-colors rounded-none"
              required
            >
            <button
              type="submit"
              class="absolute right-0 top-1/2 -translate-y-1/2 text-[#1C1917] hover:text-[#EA580C] font-bold uppercase text-[10px] tracking-widest"
            >
              [Submit]
            </button>
          </div>
        {% endform %}
      </div>

      <div class="flex gap-12 md:gap-24">
        <div>
          <h3 class="text-[10px] font-mono uppercase tracking-widest text-[#78716C] mb-3">/ Index</h3>
          <ul class="space-y-1">
            {% for link in linklists['main-menu'].links %}
              <li>
                <a
                  href="{{ link.url }}"
                  class="text-xs font-bold uppercase tracking-widest hover:text-[#EA580C] transition-colors"
                >
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
            <li>
              <a
                href="/search"
                class="text-xs font-bold uppercase tracking-widest hover:text-[#EA580C] transition-colors"
              >
                Search
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h3 class="text-[10px] font-mono uppercase tracking-widest text-[#78716C] mb-3">/ System</h3>
          <ul class="space-y-1 text-xs text-[#57534E]">
            <li><a href="/policies/shipping-policy" class="hover:text-[#1C1917]">Shipping</a></li>
            <li><a href="/policies/refund-policy" class="hover:text-[#1C1917]">Returns</a></li>
            <li><a href="/policies/terms-of-service" class="hover:text-[#1C1917]">Terms</a></li>
            <li><a href="/policies/privacy-policy" class="hover:text-[#1C1917]">Privacy</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-10 pt-4 border-t border-[#D6D3D1] flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex items-baseline gap-4">
        <span class="text-2xl font-bold uppercase tracking-tighter text-[#D6D3D1] select-none"> Bushido Global </span>
        <span class="text-[9px] font-mono uppercase tracking-widest text-[#78716C]"> Â© 2026 </span>
      </div>

      <div class="flex items-center gap-2 px-3 py-1 bg-white border border-[#D6D3D1] rounded-full">
        <span class="w-1.5 h-1.5 bg-[#EA580C] rounded-full animate-pulse"></span>
        <span class="text-[9px] font-mono uppercase tracking-widest text-[#1C1917]"> Sys. Normal </span>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{ "name": "Compact Footer", "settings": [] }
{% endschema %}
